@model IEnumerable<CommonBusinessLogic.Models.Content>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<div class="col-md-12">
    <div class="row">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Order ID</th>
                    <th scope="col">Channel Order No.</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td>@Model.ElementAt(i).Id</td>
                        <td>@Model.ElementAt(i).ChannelOrderNo</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row">
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Products</a>
    </div>
</div>

