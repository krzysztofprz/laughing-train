@model IEnumerable<CommonBusinessLogic.Models.Line>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<div class="col-md-12">
    <div class="row">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Merchant Product No.</th>
                    <th scope="col">GTIN</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 1; i < Model.Count(); i++)
                {
                    <tr>
                        <td>@i</td>
                        <td>@Model.ElementAt(i).MerchantProductNo</td>
                        <td>@Model.ElementAt(i).Gtin</td>
                        <td>@Model.ElementAt(i).Quantity</td>
                        <td><a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ElementAt(i).MerchantProductNo">Update</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row">
        <a asp-controller="Order" asp-action="Index" class="btn btn-primary">Orders</a>
    </div>

    <div class="row">
        @TempData["UpdateMessage"]
    </div>
</div>
